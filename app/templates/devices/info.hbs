<section class="content-header">
<h1>
{{#link-to 'devices'}}<i class="fa fa-chevron-circle-left"></i>{{/link-to}} Device Info <small><i class="fa fa-th-large"></i> {{model.modelName}} </small>
</h1>
</section>

<section class="content">
  <div class="row">
  <div class="col-xs-12">
   <div class="small-box">
     <div class="icon" style="top: -40px; bottom: auto;">
       <i class="fa fa-television"></i>
     </div>
   <div class="inner">
    <h4>{{model.modelName}} <small>{{model.friendlyName}}</small> <span class="badge {{if model.online 'bg-green' 'bg-red'}}">
      {{if model.online 'online' 'offline'}}</span></h4>
        <p>
          {{model.modelDescription}} <br />
          XML : {{model.xml}}
          <div class="text-right">
          <small>
            {{#if model.manufacturerURL}}
              Manufacturer: {{model.manufacturerURL}} <br />
            {{/if}}
            {{#if model.modelURL}}
              Model url: {{model.modelURL}}
            {{/if}}
          </small>
        </div>
        </p>
    </div>


    </div>
  </div>
</div>

<div class="box box-success">
  <div class="box-body no-padding">
    <table class="table table-condensed">
        <tbody><tr>
          <th width=20></th>
            <th >Media info</th>
            <th></th>

        </tr>
{{#each model.clientMediaInfo.content as |item|}}
<tr>

  <td width=20></td>
  {{#if item.b}}
  <td><strong>{{item.key}}</strong></td>
  {{else}}
  <td style="padding-left:10px;">{{item.key}}</td>
  {{/if}}
  <td>{{item.value}}</td>
</tr>
{{/each}}
    </tbody></table>
</div>
</div>


  <div class="box box-success">
    <div class="box-body no-padding">
      <table class="table table-condensed">
          <tbody><tr>
              <th width=20></th>
              <th>Device description</th>
              <th></th>
          </tr>
{{#each model.clientDescription.content as |item|}}
          <tr>

            <td width=20></td>
            {{#if item.b}}
            <td><strong>{{item.key}}</strong></td>
            {{else}}
            <td style="padding-left:10px;">{{item.key}}</td>
            {{/if}}
            <td>{{item.value}}</td>
          </tr>
{{/each}}
      </tbody></table>
  </div>
  </div>

  <div class="box box-success">
    <div class="box-body no-padding">
      <table class="table table-condensed">
          <tbody><tr>
            <th width=20></th>
              <th >Supported protocols</th>

          </tr>
{{#each model.clientProtocol.content as |item|}}
          <tr>
            <td width=20></td>
            <td>{{item}}</td>
          </tr>
{{/each}}
      </tbody></table>
  </div>
  </div>

</section>
